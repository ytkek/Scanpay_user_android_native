<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:gravity="center"
    android:background="#ffffff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textStyle="bold"
        android:text="Thursday , January 30 , 2020">

    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/dayincrease"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/plus">

            </ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/monthincrease"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/plus">

            </ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/yearincrease"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/plus">

            </ImageView>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:id="@+id/dayinput"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="30"
                android:paddingLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/textinputborder">

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:id="@+id/monthinput"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="30"
                android:paddingLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/textinputborder">

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:id="@+id/yearinput"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="30"
                android:paddingLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/textinputborder">

            </TextView>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/daydecrease"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/minus">

            </ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/monthdecrease"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/minus">

            </ImageView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/yeardecrease"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/minus">

            </ImageView>
        </LinearLayout>


    </LinearLayout>
    <Button
        android:id="@+id/setdatebtn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#000000"
        android:layout_margin="5dp"
        android:text="Set Date"
        android:textColor="#ffffff">
    </Button>

    <Button
        android:id="@+id/cancelbtn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="0dp"
        android:text="Cancel"
        android:textColor="#000000">

    </Button>




</LinearLayout>