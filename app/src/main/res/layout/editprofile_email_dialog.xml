<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="EDIT EMAIL"
            android:textStyle="bold"
            android:layout_weight="1"
            android:textSize="18dp">

        </TextView>
        <ImageView
            android:id="@+id/close"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/xmark"
            >

        </ImageView>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To change your email address, please contact Scanpay via email"
        android:textSize="18dp"
        android:layout_margin="10dp">

    </TextView>
    <TextView
        android:id="@+id/emaillink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="support@myscanpay.my."
        android:textSize="18dp"
        android:layout_marginLeft="10dp"
        android:textColor="#0094FF">

    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Our representative will asist you"
        android:textSize="18dp"
        android:layout_margin="10dp">

    </TextView>

    <EditText
        android:id="@+id/emailbind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="xxxxx.com"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

    </EditText>

</LinearLayout>