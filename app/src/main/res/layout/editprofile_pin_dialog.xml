<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="EDIT PAYMENT PIN PASSWORD"
            android:textStyle="bold"
            android:layout_weight="1"
            android:textSize="18dp">

        </TextView>
        <ImageView
            android:id="@+id/close"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/xmark"
            >

        </ImageView>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please enter your new payment pin"
        android:textSize="18dp"
        android:layout_margin="10dp">

    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/pin1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/textinputborder"
            android:inputType="phone"
            android:digits="1234567890"
            android:maxLength="1"
            android:hint=""
            android:paddingLeft="20dp"
            android:textSize="20dp"
            ></EditText>
        <EditText
            android:id="@+id/pin2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/textinputborder"
            android:inputType="phone"
            android:digits="1234567890"
            android:maxLength="1"
            android:hint=""
            android:paddingLeft="20dp"
            android:textSize="20dp"
            ></EditText>
        <EditText
            android:id="@+id/pin3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/textinputborder"
            android:inputType="phone"
            android:digits="1234567890"
            android:maxLength="1"
            android:hint=""
            android:paddingLeft="20dp"
            android:textSize="20dp"
            ></EditText>
        <EditText
            android:id="@+id/pin4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/textinputborder"
            android:inputType="phone"
            android:digits="1234567890"
            android:maxLength="1"
            android:hint=""
            android:paddingLeft="20dp"
            android:textSize="20dp"></EditText>

        <EditText
            android:id="@+id/pin5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/textinputborder"
            android:inputType="phone"
            android:digits="1234567890"
            android:maxLength="1"
            android:hint=""
            android:paddingLeft="20dp"
            android:textSize="20dp"></EditText>
        <EditText
            android:id="@+id/pin6"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/textinputborder"
            android:inputType="phone"
            android:digits="1234567890"
            android:maxLength="1"
            android:hint=""
            android:paddingLeft="20dp"
            android:textSize="20dp"></EditText>



    </LinearLayout>
    <TextView
        android:id="@+id/payment_error_message_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#D81B60"
        android:text="error message"
        android:layout_marginLeft="10dp"></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please enter old payment pin if you want to change to new payment pin"
        android:textSize="18dp"
        android:layout_margin="10dp">

    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/oldpin1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/textinputborder"
            android:inputType="phone"
            android:digits="1234567890"
            android:maxLength="1"
            android:hint=""
            android:paddingLeft="20dp"
            android:textSize="20dp"
            ></EditText>
        <EditText
            android:id="@+id/oldpin2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/textinputborder"
            android:inputType="phone"
            android:digits="1234567890"
            android:maxLength="1"
            android:hint=""
            android:paddingLeft="20dp"
            android:textSize="20dp"
            ></EditText>
        <EditText
            android:id="@+id/oldpin3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/textinputborder"
            android:inputType="phone"
            android:digits="1234567890"
            android:maxLength="1"
            android:hint=""
            android:paddingLeft="20dp"
            android:textSize="20dp"
            ></EditText>
        <EditText
            android:id="@+id/oldpin4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/textinputborder"
            android:inputType="phone"
            android:digits="1234567890"
            android:maxLength="1"
            android:hint=""
            android:paddingLeft="20dp"
            android:textSize="20dp"></EditText>

        <EditText
            android:id="@+id/oldpin5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/textinputborder"
            android:inputType="phone"
            android:digits="1234567890"
            android:maxLength="1"
            android:hint=""
            android:paddingLeft="20dp"
            android:textSize="20dp"></EditText>
        <EditText
            android:id="@+id/oldpin6"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/textinputborder"
            android:inputType="phone"
            android:digits="1234567890"
            android:maxLength="1"
            android:hint=""
            android:paddingLeft="20dp"
            android:textSize="20dp"></EditText>



    </LinearLayout>
    <TextView
        android:id="@+id/oldpayment_error_message_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#D81B60"
        android:text="error message"
        android:layout_marginLeft="10dp"></TextView>
    <Button
        android:id="@+id/savebtn"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:background="@drawable/round_border"
        android:textColor="#ffffff"
        android:text="Save"></Button>

    <Button
        android:id="@+id/forgotbtn"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:background="@drawable/round_border"
        android:textColor="#ffffff"
        android:text="Forget Pin"></Button>


</LinearLayout>