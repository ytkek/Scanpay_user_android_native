<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/location_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/like">

        </ImageView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/location_companyname"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="ScanPay Sdn Bhd"
                android:textStyle="bold"
                android:textColor="#0B6AF5">

            </TextView>

            <TextView
                android:id="@+id/location_address"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="06-01, Jalan Austin Perdana 2/23, Taman Mount Austin, 81100, Johor Bahru,Johor">

            </TextView>
        </LinearLayout>

            <ImageView
                android:id="@+id/location_topup"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@drawable/systeminfo"
                ></ImageView>

    </LinearLayout>

</LinearLayout>